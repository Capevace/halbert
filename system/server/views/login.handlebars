<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>

  <link rel="stylesheet" href="/css/framework.css">
  <script src="/js/jquery.js" charset="utf-8"></script>
  <script src="/js/bootstrap.js" charset="utf-8"></script>
</head>
<body class="dashboard">
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-3">Login</h1>
      <form class="form" method="post" action="/login">
        <div class="form-group row">
          <label for="username-input" class="col-3 col-form-label">Username</label>
          <div class="col-9">
            <input class="form-control" type="text" id="username-input" name="username">
          </div>
        </div>
        <div class="form-group row">
          <label for="password-input" class="col-3 col-form-label">Password</label>
          <div class="col-9">
            <input class="form-control" type="password" id="password-input" name="password">
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>
  </div>
</body>
</html>

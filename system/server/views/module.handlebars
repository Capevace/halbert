<template id="pin-input-template">
  <div class="form-group row">
    <label :for="settingsKey" class="col-sm-2 col-form-label">GPIO-Pin</label>
    <div class="col-sm-10">
      <input :name="settingsKey" type="number" class="form-control" :id="settingsKey" placeholder="GPIO-Pin" min="1" max="27" step="1">
    </div>
  </div>
</template>
<script type="text/javascript">
  Vue.component('pin-input', {
    template: '#pin-input-template',
    props: ['title', 'settingsKey']
  });
</script>

<template id="text-input-template">
  <div class="form-group row">
    <label :for="settingsKey" class="col-sm-2 col-form-label">GPIO-Pin</label>
    <div class="col-sm-10">
      <input :name="settingsKey" type="text" class="form-control" :id="settingsKey" :placeholder="placeholder" :size="size">
    </div>
  </div>
</template>
<script type="text/javascript">
  Vue.component('text-input', {
    template: '#text-input-template',
    props: ['title', 'settingsKey', 'placeholder', 'size']
  });
</script>


<div class="row mt-1 mb-1">
  <div class="col-sm-12">
    <h2>
      {{module.info.name}}
      <small class="text-muted">{{module.info.author}}</small>
    </h2>
  </div>
</div>
<div class="row" id="edit">
  <div class="col-md-12">
    <form action="switches" method="post">
      <pin-input settings-key="gpio.remote" title="Somethin"></pin-input>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>
<script type="text/javascript">
  new Vue({
    el: '#edit',
    data: {

    },
  });
</script>












